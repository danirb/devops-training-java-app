#!groovy

def runInDocker(String image, Closure body) {
  docker.image(image).inside {
    body()
  }
}

pipeline {
  agent any
    params {
        booleanParam(name: 'RUN_CD', defaultValue: false, description: 'Ejecutar CD (solo develop/master)')
    }
  options {
    timestamps()
    disableConcurrentBuilds()
  }
  stages {
    stage('Info') {
      steps {
        sh "echo Job: ${env.JOB_NAME}"
        sh "echo Build: ${env.BUILD_NUMBER}"
      }
    }
    stage('CI - Build tools image') {
      steps {
        script {
          env.CI_IMAGE_NAME = "java-ci-tools:${env.BUILD_NUMBER}"
          sh "echo CI_IMAGE_NAME: ${env.CI_IMAGE_NAME}"
          docker.build(env.CI_IMAGE_NAME, "-f devops/ci.Dockerfile .")
        }
      }
    }

    stage('CI - Lint') {
      steps {
        script {
          runInDocker(env.CI_IMAGE_NAME) { sh 'make lint' }
        }
      }
    }
    stage('CI - Test') {
      steps {
        script {
          runInDocker(env.CI_IMAGE_NAME) { sh 'make test' }
        }
      }
    }
    stage('CD') {

        when {
            anyOf {
                expression { return params.RUN_CD }
                branch 'develop'
                branch 'master'
            }
        }
        steps {
            echo "CD habilitado: RUN_CD=${params.RUN_CD}, branch=${env.BRANCH_NAME}"
            script {
                sh 'docker compose up -d'
                sh 'sleep 5'
                sh 'curl --fail http://localhost:8084/hello'
            }
        }
        post {
            always {
                sh 'docker compose down --volumes || true'
                sh 'docker rmi IMAGE_NAME || true'
            }
            success {
                echo 'SUCCESS'
            }
            failure {
                echo 'FAILURE'
                sh 'docker compose logs || true'
            }
        }
    }
  }
}
